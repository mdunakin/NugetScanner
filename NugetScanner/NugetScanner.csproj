          SkipUnchangedFiles="true" />
  </Target>
  <Target Name="PackPlugin" AfterTargets="Build">
    <!-- Re-evaluate paths now that OutDir has its final value -->
    <PropertyGroup>
      <PluginPackageDir>$(OutDir)plugin-package\</PluginPackageDir>
      <AgentStageDir>$(OutDir)agent-staging\</AgentStageDir>
    </PropertyGroup>
    <!-- Stage full plugin structure under $(OutDir)plugin-package -->
    <RemoveDir Directories="$(PluginPackageDir)" Condition="Exists('$(PluginPackageDir)')" />
    <RemoveDir Directories="$(AgentStageDir)" Condition="Exists('$(AgentStageDir)')" />
    <MakeDir Directories="$(PluginPackageDir)agent" />
    <MakeDir Directories="$(AgentStageDir)lib" />

    <!-- Root (server) descriptor -->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\..\teamcity-plugin.xml"
          DestinationFiles="$(PluginPackageDir)teamcity-plugin.xml"
          SkipUnchangedFiles="true" />

    <!-- Agent descriptor and payload -->
    <Copy SourceFiles="$(MSBuildProjectDirectory)\teamcity-agent-plugin.xml"
          DestinationFiles="$(AgentStageDir)teamcity-plugin.xml"
          SkipUnchangedFiles="true" />

