  <Target Name="BuildPluginLayout" AfterTargets="Build">
    <ItemGroup>
      <PluginPayload Include="$(OutDir)*.*"
                     Exclude="$(OutDir)agent\**;$(OutDir)*.tmp;$(OutDir)teamcity-plugin.xml" />
    </ItemGroup>
    <MakeDir Directories="$(OutDir)agent\lib" />
    <Copy SourceFiles="@(PluginPayload)"
